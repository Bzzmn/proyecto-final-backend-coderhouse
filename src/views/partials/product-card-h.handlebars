<div id="product-card-{{_id}}" class="product-card-h bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700">
    <div class="flex flex-col md:flex-row">
        <!-- Imagen del producto -->
        <div class="w-full md:w-1/4 p-4 flex items-center justify-center">
            <a href="/product/{{_id}}">
                <img class="w-full h-48 md:h-32 object-contain" src={{imgSrc}} alt="{{title}}" />
            </a>
        </div>

        <!-- Información del producto -->
        <div class="w-full md:w-3/4 p-4">
            <div class="flex flex-col h-full justify-between">
                <!-- Título y detalles -->
                <div>
                    <h5 class="text-xl font-semibold tracking-tight text-gray-900 dark:text-white mb-2">{{title}}</h5>
                    <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">{{category}}</p>
                    
                    <!-- Rating -->
                    <div class="flex items-center mb-4">
                        <div class="flex items-center space-x-1 rtl:space-x-reverse">
                            {{#times 4}}
                            <svg class="w-4 h-4 text-yellow-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                                <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                            </svg>
                            {{/times}}
                            <svg class="w-4 h-4 text-gray-300" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 22 20">
                                <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z"/>
                            </svg>
                        </div>
                        <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded dark:bg-blue-200 dark:text-blue-800 ms-3">4.0</span>
                    </div>
                </div>

                <!-- Precio y botones -->
                <div class="flex flex-col sm:flex-row items-center justify-between gap-4">
                    <div class="text-2xl font-bold text-gray-900 dark:text-white">
                        ${{price}}
                    </div>
                    
                    <div class="flex flex-col sm:flex-row gap-2 w-full sm:w-auto">

                        <!-- Botones de acción -->
                        <div class="flex gap-2">
                            <a href="/product/{{_id}}" 
                               class="text-gray-900 bg-white border border-gray-300 hover:bg-gray-100 font-medium rounded-lg text-sm px-4 py-2 text-center inline-flex items-center">
                                Ver
                            </a>
                            <button 
                                data-id="{{_id}}"
                                class="add-to-cart-btn text-white bg-blue-700 hover:bg-blue-800 font-medium rounded-lg text-sm px-4 py-2 text-center inline-flex items-center"
                                p_price="{{price}}" 
                                p_stock="{{stock}}" 
                                p_image="{{imgSrc}}"
                                p_title="{{title}}"
                                p_category="{{category}}"
                                p_code="{{code}}"
                                p_status="{{status}}"
                            >
                                Agregar
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>